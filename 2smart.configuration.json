{
    "title": "Tesla Bridge",
    "type": "tesla-bridge",
    "registry": "registry.gitlab.webbylab.com/smarthome/2smart/standalone/bridges/tesla",
    "configuration": {
        "fields": [
            {
                "label": "Device name",
                "name": "DEVICE_NAME",
                "type": "string",
                "default": "Tesla Bridge"
            },
            {
                "label": "Client ID*",
                "name": "CLIENT_ID",
                "type": "string",
                "validation": [
                    "required",
                    "string"
                ],
                "default": "81527cff06843c8634fdc09e8ac0abefb46ac849f38fe1e431c2ef2106796384"
            },
            {
                "label": "Client Secret*",
                "name": "CLIENT_SECRET",
                "type": "string",
                "validation": [
                    "required",
                    "string"
                ],
                "default": "c7257eb71a564034f9419ee651c7d0e5f7aa6bfbd18bafb5c5c033b093bb2fa3"
            },
            {
                "label": "Access token*",
                "name": "OAUTH_ACCESS_TOKEN",
                "type": "string",
                "validation": [
                    "required",
                    "string"
                ],
                "default": ""
            },
            {
                "label": "Refresh token*",
                "name": "OAUTH_REFRESH_TOKEN",
                "type": "string",
                "validation": [
                    "required",
                    "string"
                ],
                "default": ""
            },
            {
                "label": "Debug",
                "name": "DEBUG",
                "type": "string",
                "default": null
            }
        ],
        "exposePort": false,
        "privilege": false
    },
    "icon": "favicon.svg"
}